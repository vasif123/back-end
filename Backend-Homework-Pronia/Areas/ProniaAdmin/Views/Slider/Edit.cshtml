@model Slider
@{
    ViewData["Title"] = "Edit";
}


<div class="main-panel d-flex flex-column justify-content-center align-items-center my-2">
    <h1>Edit Slider</h1>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="image my-4">
            <img width="300" src="~/assets/images/slider/@Model.Image" alt="@Model.Title"/>
        </div>
        <div>
            <label>Image:</label><br />
            <input asp-for="Photo" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label>Discount:</label><br />
            <input asp-for="Discount" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
        <div>
            <label>Title :</label><br />
            <input asp-for="Title" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div>
            <label>Article:</label><br />
            <input asp-for="Article" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Article"></span>
        </div>
        <div>
            <label>ButtonUrl:</label><br />
            <input asp-for="ButtonUrl" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="ButtonUrl"></span>
        </div>
        <div>
            <label>Order:</label><br />
            <input asp-for="Order" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Order"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-warning" type="submit">Edit</button>
        </div>
    </form>
</div>