@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div>
        <a asp-area="proniaadmin" asp-controller="category" asp-action="Create" class="btn btn-outline-success">Create new category</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                       Settings
                    </th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model.OrderByDescending(x=>x.Id))
                {
                    <tr>
                        <td>
                            @category.Id
                        </td>
                        <td>
                            @category.Name
                        </td>
                        <td class="d-flex ">
                            <div class="me-2">
                                <a asp-area="ProniaAdmin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-border-color"></i>
                                </a>
                            </div>
                            <div>
                                <a asp-area="ProniaAdmin" asp-controller="Category" asp-action="Remove" asp-route-id="@category.Id" class="btn btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>
