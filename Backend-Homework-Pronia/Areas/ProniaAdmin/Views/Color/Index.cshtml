@model List<Color>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div>
        <a asp-area="proniaadmin" asp-controller="Color" asp-action="Create" class="btn btn-outline-success">Create new color</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>

                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (Color color in Model.OrderByDescending(x => x.Id))
                {
                    <tr>

                        <td>@color.Id</td>

                        <td>@color.Name</td>

                        <td class="d-flex ">
                            <div class="me-2">
                                <a asp-area="ProniaAdmin" asp-controller="color" asp-action="Edit" asp-route-id="@color.Id" class="btn btn-outline-warning">
                                    <i class="mdi mdi-border-color"></i>
                                </a>
                            </div>
                            <div class="me-2">
                                <a asp-area="ProniaAdmin" asp-controller="color" asp-action="Remove" asp-route-id="@color.Id" class="btn btn-outline-danger">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </div>
                            <div>
                                <a asp-area="ProniaAdmin" asp-controller="color" asp-action="Detail" asp-route-id="@color.Id" class="btn btn-outline-info">
                                    <i class="mdi mdi-comment-question-outline"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>
